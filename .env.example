# ========================================
# AWS Configuration
# ========================================

# AWS Account ID (obtenir via : aws sts get-caller-identity)
CDK_DEFAULT_ACCOUNT=123456789012

# AWS Region (recommandé : eu-west-3 pour Paris)
CDK_DEFAULT_REGION=eu-west-3

# Environment (dev, staging, prod)
ENVIRONMENT=dev

# Owner (votre nom ou email)
OWNER=student@example.com

# ========================================
# External APIs
# ========================================

# Etherscan API Key (gratuit : https://etherscan.io/apis)
ETHERSCAN_API_KEY=YOUR_ETHERSCAN_API_KEY_HERE

# Alchemy API Key (optionnel, fallback)
ALCHEMY_API_KEY=YOUR_ALCHEMY_API_KEY_HERE

# ========================================
# Application Configuration
# ========================================

# Domain name (optionnel, pour Route 53)
DOMAIN_NAME=dashboard.example.com

# Email pour les alertes CloudWatch
ALERT_EMAIL=admin@example.com

# ========================================
# Cost Optimization
# ========================================

# Budget mensuel (USD)
MONTHLY_BUDGET=50

# ElastiCache node type (dev: cache.t3.micro, prod: cache.t3.small)
CACHE_NODE_TYPE=cache.t3.micro

# ========================================
# Security
# ========================================

# Enable MFA (true/false)
ENABLE_MFA=false

# Enable WAF (true/false, coût +$5/mois)
ENABLE_WAF=false

# ========================================
# Monitoring
# ========================================

# CloudWatch Logs retention (jours)
LOG_RETENTION_DAYS=7

# Enable X-Ray tracing (true/false)
ENABLE_XRAY=true
